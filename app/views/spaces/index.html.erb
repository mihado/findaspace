<div id="space_list" >
    <h1>Listing all spaces</h1>
    <table>
        <% @spaces.each do |space| %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>" >
            <td>
                <img height="180px" src="<%= image_path space.img_url %>"/>
            </td>
            <td class="list_description" >
                <dl>
                    <dt><%= space.name %> - <%= space.address %>, <%= space.suburb %>, <%= space.city %></dt>
                    <dd>
                        Capacity: <%= space.capacity %><br />
                        Price: $<%= space.price %>/hr<br />
                        Description: <%= space.desc %><br /><br />
                        <b><%= link_to 'Booking Request', new_space_bookingreq_path(space) %></b>
                    </dd>
                </dl>
            </td>
            <td class="" >
                <% if admin_signed_in? %>
                <%= link_to 'Show', space %><br/>
                <%= link_to 'Edit', edit_space_path(space) %><br/>
                <%= link_to 'Destroy', space,
                :data => {:confirm => 'Are you sure?'},
                :method => :delete %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </table>
</div>

